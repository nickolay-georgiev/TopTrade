@model TopTrade.Web.ViewModels.Administration.UsersPageViewModel

@{
    ViewData["Title"] = "Verification Documents All";
}

@if (TempData["Message"] != null)
{
    <partial name="_ToastPartial" />
}

<div class="text-left py-3 form-group">
    <form asp-action="SearchById" method="get">
        <button class="btn btn-primary">Search</button>
        <input name="id" placeholder="Enter user id" />
    </form>
</div>

<div class="table-responsive-md">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Full Name</th>
                <th scope="col">Email</th>
                <th scope="col">Created On</th>
                <th scope="col">Is Deleted</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>
                        <div class="form-group">
                            <div custom-badge>@user.Id</div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div custom-badge>@user.FullName</div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div custom-badge>@user.Email</div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            @user.CreatedOn.ToLocalTime()
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            @user.IsDeleted
                        </div>
                    </td>
                    <td>
                        <div class="row align-items-xl-center">
                            <div class="form-group mr-3 mr-3">
                                <a class="px-4 py-2 text-light bg-success rounded" asp-action="Details" asp-route-id="@user.Id">Details</a>
                            </div>
                            <div>
                                <form asp-action="CreateManager" method="post">
                                    <div class="form-group mr-3">
                                        <input asp-for="@user.Id" name="Id" hidden />
                                        <button class="btn btn-success">Make It Manager</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <partial name="_PagingPartial" model="@Model">
</div>
