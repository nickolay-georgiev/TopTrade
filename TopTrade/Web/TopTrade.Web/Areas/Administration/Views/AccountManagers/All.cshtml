@model TopTrade.Web.ViewModels.Administration.AccountManagerPageViewModel

@{
    ViewData["Title"] = "Verification Documents All";
}

@if (TempData["Message"] != null)
{
    <partial name="_ToastPartial" />
}

<div class="text-left py-3 form-group">
    <form asp-action="SearchById" method="get">
        <button class="btn btn-primary">Search</button>
        <input name="id" placeholder="Enter user id" />
    </form>
</div>

<div class="table-responsive-md">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Full Name</th>
                <th scope="col">Email</th>
                <th scope="col">Created On</th>
                <th scope="col">Is Deleted</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var manager in Model.Managers)
            {
                <tr>
                    <td>
                        <div class="form-group">
                            <div custom-badge>@manager.Id</div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div custom-badge>@manager.FullName</div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div custom-badge>@manager.Email</div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            @manager.CreatedOn.ToLocalTime()
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            @manager.IsDeleted
                        </div>
                    </td>
                    <td>
                        <div class="form-group mr-3">
                            <a class="px-4 py-2 text-light bg-success rounded" asp-action="Edit" asp-route-id="@manager.Id">Edit</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <partial name="_PagingPartial" model="@Model">
</div>
