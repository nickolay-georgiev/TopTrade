@model TopTrade.Web.ViewModels.Administration.AdministratorDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="row">
    <div class="col-xl-4 col-12">
        <div class="card h-100">
            <div class="card-content my-4">
                <div class="card-body pb-0">
                    <div class="row">
                        <div class="col pl-2 text-center">
                            <a asp-action="All" asp-controller="Users"><h4>New Users This Month</h4></a>
                        </div>
                    </div>
                </div>
                <div class="mt-2 d-flex justify-content-center">
                    <h1>@Model.TotalUserThisMonth /&nbsp</h1>
                    <h1> @Model.TotalUsersWithDeletedAccounts</h1>
                    <span class="align-self-xl-center">&nbsptotal</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-12">
        <div class="card h-100">
            <div class="card-content my-4">
                <div class="card-body pb-0">
                    <div class="row">
                        <div class="col pl-2 text-center">
                            <a asp-action="All" asp-controller="AccountManagers">
                                <h4>Total Account Managers</h4>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="mt-2 text-right text-center">
                    <h1>@Model.TotalAccountManagers</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-12">
        <div class="card h-100">
            <div class="card-content my-4">
                <div class="card-body pb-0">
                    <div class="row">
                        <div class="col pl-2 text-center">
                            <a class="primary-color">
                                <h4>Total Profit From Fees</h4>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="mt-2 text-right text-center">
                    <h1>@Model.TotalProfitFromFees.ToString("f2")</h1>
                </div>
            </div>
        </div>
    </div>
</div>
