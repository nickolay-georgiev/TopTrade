@{
    ViewData["Title"] = "News Feed Page";
    ViewData["PageName"] = "News Feed";
}


<div class="app-content content">
    <div class="history-content-wrapper">
        <partial name="_NavigationPartial" view-data="ViewData">
            <div class="content-body">
                <form asp-action="Search" method="get">
                    <div class="row justify-content-md-center">
                        <div class="form-group search-news-form col-md-4">
                            <div class="input-group">
                                <input name="keyword" class="form-control border-right-0" placeholder="Search stock news">
                                <span class="input-group-prepend">
                                    <button type="submit" class="input-group-text search-news-button">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </span>
                                @*<button type="submit" class="close-search-bar" hidden>
