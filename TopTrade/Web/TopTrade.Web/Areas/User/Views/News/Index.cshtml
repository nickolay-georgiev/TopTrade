                @foreach (var article in Model)
                    {
                        <div class="col-8">
                            <div class="news-card">
                                <div class="card-header">
                                    <h4 class="card-title">@article.Title</h4>
                                </div>
                                <div class="card-body">
                                    <div class="img-wrapper">
                                        <img class="img-fluid"
                                             src="@article.ImageUrl"
                                             alt="article image">
                                    </div>
                                    <hr>
                                    <p>
                                        @article.Description
                                    </p>
                                    <div>
                                        <a href="@article.Url">Read this article</a>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="row justify-content-between mx-3">
                                        <p>Author: <strong>@article.Author</strong></p>
                                        <p>Published At : <strong>@article.PublishedAt</strong></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

            </div>
    </div>
</div>
</div>
@section Scripts {
