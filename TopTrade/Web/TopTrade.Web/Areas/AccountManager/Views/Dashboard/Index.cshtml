@model TopTrade.Web.ViewModels.AccountManager.DashboardViewModel

@{
    ViewData["Title"] = "Manager Dashboard";
}

<div id="crypto-stats-3" class="row">
    <div class="col-xl-4 col-12">
        <div class="card h-100">
            <div class="card-content my-4">
                <div class="card-body pb-0">
                    <div class="row">
                        <div class="col pl-2 text-center">
                            <a asp-action="All" asp-controller="User"><h4>New Users This Month</h4></a>
                        </div>
                    </div>
                </div>
                <div class="mt-2 text-right text-center">
                    <h1>@Model.NewUsersThisMonth</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-12">
        <div class="card h-100">
            <div class="card-content my-4">
                <div class="card-body pb-0">
                    <div class="row">
                        <div class="col pl-2 text-center">                         
                            <a asp-action="All" asp-controller="VerificationDocuments"><h4>New Documents Waiting Approval</h4></a>
                        </div>
                    </div>
                </div>
                <div class="mt-2 text-right text-center">
                    <h1>@Model.UnverifiedDocumentsCount</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-12">
        <div class="card h-100">
            <div class="card-content my-4">
                <div class="card-body pb-0">
                    <div class="row">
                        <div class="col pl-2 text-center">
                            <a asp-action="All" asp-controller="WithdrawRequests"><h4>New Withdraw Requests</h4></a>
                        </div>
                    </div>
                </div>
                <div class="mt-2 text-right text-center">
                    <h1>@Model.UnverifiedWithdrawRequestsCount</h1>
                </div>
            </div>
        </div>
    </div>
</div>