@using TopTrade.Data.Models.User.Enums
@model TopTrade.Web.ViewModels.AccountManager.WithdrawRequestViewModel

@{
    ViewData["Title"] = "Edit Request";
}

<div class="d-flex justify-content-between align-items-xl-end">
    <h4>Withdraw Requests</h4>
    <div>
        <a asp-action="All">Back to List</a>
    </div>
</div>
<hr />
<div class="row">
    <form asp-action="Edit">
        <div class="row">
            <div class="col-md">
                <div class="form-group">
                    <label asp-for="Amount" class="control-label"></label>
                    <input asp-for="Amount" class="form-control" disabled />
                </div>
            </div>
            <div class="col-md">
                <div class="form-group">
                    <label asp-for="UserAccountStatisticAvailable" class="control-label"></label>
                    <input asp-for="UserAccountStatisticAvailable" class="form-control" disabled />
                </div>
            </div>
            <div class="col-md">
                <div class="form-group">
                    <label asp-for="CardNumber" class="control-label"></label>
                    <input asp-for="CardNumber" class="form-control" disabled />
                </div>
            </div>
            <div class="col-md">
                <div class="form-group">
                    <label asp-for="UserId" class="control-label"></label>
                    <input asp-for="UserId" class="form-control" disabled />
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label asp-for="CreatedOn" class="control-label"></label>
                    <input asp-for="CreatedOn" class="form-control" disabled />
                </div>
            </div>
            <div class="col-md">
                <div class="form-group">
                    <label asp-for="TransactionStatus" class="control-label"></label>
                    <select class="form-control" asp-for="TransactionStatus" asp-items="Html.GetEnumSelectList<TransactionStatus>()"></select>
                    <span asp-validation-for="TransactionStatus" class="text-danger"></span>
                </div>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="col-md align-self-md-end">
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>
</div>
