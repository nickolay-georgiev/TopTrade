@model TopTrade.Web.ViewModels.AccountManager.UsersPageViewModel

@{
    ViewData["Title"] = "Verification Documents All";
}

@if (TempData["Message"] != null)
{
    <partial name="_ToastPartial" />
}

<div class="table-responsive-md">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Full Name</th>
                <th scope="col">Email</th>
                <th scope="col">Created On</th>
                <th scope="col">Modified On</th>
                <th scope="col">Is Deleted</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>
                        <div class="form-group">
                            <div custom-badge>@user.Id</div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div custom-badge>@user.FullName</div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div custom-badge>@user.Email</div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            @user.CreatedOn.ToLocalTime()
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            @user.ModifiedOn.ToLocalTime()
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            @user.IsDeleted
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <a class="px-4 py-2 text-light bg-success rounded" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <partial name="_PagingPartial" model="@Model">
</div>